{
    "height": 30,
    "spacing": 4,
    "margin-top": 5,
    "margin-bottom": 0,
    "margin-left": 5,
    "margin-right": 5,
    "modules-left": [
        "clock"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "network",
        "bluetooth",
        "backlight",
        "cpu",
        "memory",
        "pulseaudio",
        "battery",
        "tray"
    ],
    "hyprland/workspaces": {
        "format": "{name}",
        "persistent-workspaces": {
            "*": [
                1,
                2,
                3,
                4,
                5
            ]
        }
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S %a, %d %b}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "memory": {
        "interval": 5,
        "format": "MEM: {used:0.1f} GB"
    },
    "cpu": {
        "interval": 5,
        "format": "CPU: {usage}%"
    },
    "pulseaudio": {
        "format": "VOL: {volume}%",
        "format-muted": "VOL: Muted",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                "",
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "BAT: {capacity}%",
        "format-charging": "CHG: {capacity}%",
        "format-plugged": "PLG: {capacity}%"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "LGT: {percent}%"
    },
    "tray": {
        "spacing": 10
    },
    "network": {
        "format-wifi": "WiFi: {essid}",
        "format-ethernet": "ETH: {ipaddr}",
        "format-disconnected": "WiFi: Off",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)\n{ipaddr}",
        "tooltip-format-ethernet": "{ifname}\n{ipaddr}",
        "on-click": "nm-connection-editor"
    },
    "bluetooth": {
        "format": "BT: {status}",
        "format-connected": "BT: {device_alias}",
        "format-disabled": "BT: Off",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueman-manager"
    },
    "custom/ticker": {
        "exec": "~/.config/waybar/waybar-ticker.sh",
        "exec-if": "command -v jq && command -v curl",
        "return-type": "json",
        "tooltip": true,
        "restart-interval": 60
    }
}
